{
  "manifest_version": 2,
  "name": "Shot Clock",
  "short_name":"Word count",
  "description": "This extension adds a clock to the upper corner of the browser to help developers keep track of time.",
  "version": "1.0",
  "icons":
  {
  	"128":"icon128.png",
  	"16":"icon16.png",
  	"48":"icon48.png"
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}
